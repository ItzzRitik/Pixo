<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@id/search_panel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:id="@id/search_bar_container"
        android:background="@color/suggestion_condition_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@id/search_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/search_bar_margin"
            app:cardBackgroundColor="?android:colorBackground"
            app:cardCornerRadius="2.0dip"
            app:cardElevation="2.0dip">
            <Toolbar android:theme="?android:actionBarTheme"
                android:id="@id/search_toolbar"
                android:background="?android:selectableItemBackground"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/search_bar_height"
                android:contentInsetStart="0.0dip"
                android:contentInsetStartWithNavigation="0.0dip">
                <SearchView android:id="@id/search_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:imeOptions="actionSearch|flagNoExtractUi"
                    android:iconifiedByDefault="false"
                    android:searchIcon="@null" />
            </Toolbar>
        </android.support.v7.widget.CardView>
    </FrameLayout>
    <FrameLayout android:orientation="vertical"
        android:id="@id/layout_results"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <android.support.v7.widget.RecyclerView
            android:scrollbarStyle="outsideOverlay"
            android:id="@id/list_results"
            android:paddingTop="@dimen/dashboard_padding_top"
            android:paddingBottom="@dimen/dashboard_padding_bottom"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dashboard_padding_start"
            android:paddingEnd="@dimen/dashboard_padding_end" />
        <LinearLayout android:orientation="vertical"
            android:id="@id/no_results_layout"
            android:paddingTop="96.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Space android:layout_width="fill_parent" android:layout_height="?android:actionBarSize" />
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="160.0dip" android:layout_height="160.0dip" android:src="@drawable/empty_search_results" />
            <TextView android:textSize="18.0sp" android:gravity="center" android:paddingTop="24.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/search_settings_no_results" />
        </LinearLayout>
    </FrameLayout>
    <include layout="@layout/search_feedback" />
</LinearLayout>